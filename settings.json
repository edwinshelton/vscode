        "desaturation",
        "exiftool",
        "gifs",
        "karabiner",
        "keybind",
        "keychain",
        "livestreaming",
        "losslessly",
        "macos",
        "multiboot",
        "nvim",
        "osascript",
        "pandoc",
        "pdftk",
        "pomodoro",
        "pulseaudio",
        "qbittorrent",
